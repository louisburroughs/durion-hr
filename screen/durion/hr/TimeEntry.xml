<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Time Entry">

    <parameter name="personId"/>

    <transition name="createTimeEntry">
        <service-call name="durion.hr.DurHrServices.create#TimeEntry"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find-one entity-name="durion.hr.DurHrPerson" value-field="person"/>
        <entity-find entity-name="durion.hr.DurHrTimeEntry" list="timeEntryList">
            <econdition field-name="personId" from="personId"/>
            <order-by field-name="-workDate"/>
        </entity-find>
    </actions>

    <widgets>
        <container>
            <label text="Time Entry for ${person.firstName} ${person.lastName}" type="h2"/>
            
            <form-single name="CreateTimeEntryForm" transition="createTimeEntry">
                <field name="personId"><default-field><hidden/></default-field></field>
                <field name="workDate"><default-field><date-time type="date"/></default-field></field>
                <field name="clockInTime"><default-field><date-time/></default-field></field>
                <field name="clockOutTime"><default-field><date-time/></default-field></field>
                <field name="hoursWorked"><default-field><text-line/></default-field></field>
                <field name="breakMinutes"><default-field><text-line default-value="0"/></default-field></field>
                <field name="overtimeHours"><default-field><text-line default-value="0"/></default-field></field>
                <field name="notes"><default-field><text-area rows="3"/></default-field></field>
                <field name="submitButton"><default-field title="Create Entry">
                    <submit/>
                </default-field></field>
            </form-single>

            <container-box>
                <box-header title="Recent Time Entries"/>
                <box-body>
                    <form-list name="TimeEntryList" list="timeEntryList">
                        <field name="workDate"><default-field><display format="yyyy-MM-dd"/></default-field></field>
                        <field name="clockInTime"><default-field><display format="HH:mm"/></default-field></field>
                        <field name="clockOutTime"><default-field><display format="HH:mm"/></default-field></field>
                        <field name="hoursWorked"><default-field><display/></default-field></field>
                        <field name="status"><default-field><display/></default-field></field>
                    </form-list>
                </box-body>
            </container-box>
        </container>
    </widgets>

</screen>
