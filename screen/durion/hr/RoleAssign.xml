<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Assign Role">

    <parameter name="personId"/>

    <transition name="assignRole">
        <service-call name="durion.hr.DurHrServices.assign#RoleToPerson"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find-one entity-name="durion.hr.DurHrPerson" value-field="person"/>
        <entity-find entity-name="durion.hr.DurHrRole" list="roleList">
            <econdition field-name="isActive" value="Y"/>
        </entity-find>
        <entity-find entity-name="durion.hr.DurHrPersonRole" list="assignedRoleList">
            <econdition field-name="personId" from="personId"/>
            <econdition field-name="thruDate" operator="is-null" or-null="true"/>
        </entity-find>
    </actions>

    <widgets>
        <container>
            <label text="Assign Role to ${person.firstName} ${person.lastName}" type="h2"/>
            
            <form-single name="AssignRoleForm" transition="assignRole">
                <field name="personId"><default-field><hidden/></default-field></field>
                <field name="roleId"><default-field>
                    <drop-down>
                        <list-options list="roleList" key="${roleId}" text="${roleName}"/>
                    </drop-down>
                </default-field></field>
                <field name="submitButton"><default-field title="Assign Role">
                    <submit/>
                </default-field></field>
            </form-single>

            <container-box>
                <box-header title="Current Roles"/>
                <box-body>
                    <form-list name="AssignedRolesList" list="assignedRoleList">
                        <field name="roleId"><default-field>
                            <display-entity entity-name="durion.hr.DurHrRole" text="${roleName}"/>
                        </default-field></field>
                        <field name="fromDate"><default-field><display format="yyyy-MM-dd"/></default-field></field>
                    </form-list>
                </box-body>
            </container-box>
        </container>
    </widgets>

</screen>
