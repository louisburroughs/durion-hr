<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Approve Timesheet">

    <parameter name="timesheetId"/>

    <transition name="approveTimesheet">
        <service-call name="durion.hr.DurHrServices.approve#Timesheet"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find-one entity-name="durion.hr.DurHrTimesheet" value-field="timesheet"/>
        <entity-find-one entity-name="durion.hr.DurHrPerson" value-field="person">
            <field-map field-name="personId" from="timesheet.personId"/>
        </entity-find-one>
        <entity-find entity-name="durion.hr.DurHrTimeEntry" list="timeEntryList">
            <econdition field-name="timesheetId" from="timesheetId"/>
            <order-by field-name="workDate"/>
        </entity-find>
    </actions>

    <widgets>
        <container>
            <label text="Approve Timesheet for ${person.firstName} ${person.lastName}" type="h2"/>
            
            <container-box>
                <box-header title="Timesheet Details"/>
                <box-body>
                    <label text="Period: ${ec.l10n.format(timesheet.periodStartDate, 'yyyy-MM-dd')} to ${ec.l10n.format(timesheet.periodEndDate, 'yyyy-MM-dd')}"/>
                    <label text="Status: ${timesheet.status}"/>
                    <label text="Total Hours: ${timesheet.totalHours ?: 0}"/>
                    <label text="Regular Hours: ${timesheet.regularHours ?: 0}"/>
                    <label text="Overtime Hours: ${timesheet.overtimeHours ?: 0}"/>
                    <label text="Submitted: ${ec.l10n.format(timesheet.submittedDate, 'yyyy-MM-dd HH:mm')}"/>
                </box-body>
            </container-box>

            <container-box>
                <box-header title="Time Entries"/>
                <box-body>
                    <form-list name="TimeEntryList" list="timeEntryList">
                        <field name="workDate"><default-field><display format="yyyy-MM-dd"/></default-field></field>
                        <field name="clockInTime"><default-field><display format="HH:mm"/></default-field></field>
                        <field name="clockOutTime"><default-field><display format="HH:mm"/></default-field></field>
                        <field name="hoursWorked"><default-field><display/></default-field></field>
                        <field name="overtimeHours"><default-field><display/></default-field></field>
                        <field name="notes"><default-field><display/></default-field></field>
                    </form-list>
                </box-body>
            </container-box>

            <form-single name="ApproveTimesheetForm" transition="approveTimesheet">
                <field name="timesheetId"><default-field><hidden/></default-field></field>
                <field name="submitButton"><default-field title="Approve Timesheet">
                    <submit/>
                </default-field></field>
            </form-single>
        </container>
    </widgets>

</screen>
