<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    
    <entity entity-name="DurHrPerson" package="durion.hr">
        <field name="personId" type="id" is-pk="true"/>
        <field name="firstName" type="text-medium"/>
        <field name="lastName" type="text-medium"/>
        <field name="middleName" type="text-medium"/>
        <field name="email" type="text-medium"/>
        <field name="phoneNumber" type="text-medium"/>
        <field name="dateOfBirth" type="date"/>
        <field name="ssn" type="text-short" encrypt="true"/>
        <field name="address1" type="text-medium"/>
        <field name="address2" type="text-medium"/>
        <field name="city" type="text-medium"/>
        <field name="stateProvince" type="text-short"/>
        <field name="postalCode" type="text-short"/>
        <field name="country" type="text-short"/>
        <field name="isActive" type="text-indicator" default="Y"/>
        <field name="hireDate" type="date"/>
        <field name="terminationDate" type="date"/>
    </entity>

</entities>
