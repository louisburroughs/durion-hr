<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    
    <entity entity-name="DurHrRole" package="durion.hr">
        <field name="roleId" type="id" is-pk="true"/>
        <field name="roleName" type="text-medium"/>
        <field name="description" type="text-long"/>
        <field name="isActive" type="text-indicator" default="Y"/>
    </entity>

    <entity entity-name="DurHrPersonRole" package="durion.hr">
        <field name="personRoleId" type="id" is-pk="true"/>
        <field name="personId" type="id"/>
        <field name="roleId" type="id"/>
        <field name="fromDate" type="date-time"/>
        <field name="thruDate" type="date-time"/>
        <relationship type="one" related="durion.hr.DurHrPerson" short-alias="person"/>
        <relationship type="one" related="durion.hr.DurHrRole" short-alias="role"/>
    </entity>

</entities>
