<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    
    <entity entity-name="DurHrTimesheet" package="durion.hr">
        <field name="timesheetId" type="id" is-pk="true"/>
        <field name="personId" type="id"/>
        <field name="periodStartDate" type="date"/>
        <field name="periodEndDate" type="date"/>
        <field name="totalHours" type="number-decimal"/>
        <field name="regularHours" type="number-decimal"/>
        <field name="overtimeHours" type="number-decimal"/>
        <field name="status" type="text-short"/>
        <field name="submittedDate" type="date-time"/>
        <field name="approvedDate" type="date-time"/>
        <field name="approvedBy" type="id"/>
        <field name="notes" type="text-long"/>
        <relationship type="one" related="durion.hr.DurHrPerson" short-alias="person"/>
        <relationship type="one" title="Approver" related="durion.hr.DurHrPerson" short-alias="approver">
            <key-map field-name="approvedBy" related="personId"/>
        </relationship>
    </entity>

</entities>
